<%- include ('../partials/header') %>

<div class="container my-5">
    <header>
        <h1>
            <%= blog.title%>
            <a href="/blogs/<%= blog.id %>/edit">
                <i class="fa fa-edit"></i>
            </a>
        </h1>
        <br>
        <small>
            <%= (blog.updatedAt.toLocaleString("en-CA")) %>
        </small>
    </header>
    <hr>
    <div class="content">
        <%- blog.content %>
    </div>
</div>

<%- include ('../partials/footer') %>